<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext for dev host used by the emulator -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
    <!-- If using a real device, add your PC LAN IP as another domain OR use:
    <base-config cleartextTrafficPermitted="true" />  (dev only) -->
</network-security-config>

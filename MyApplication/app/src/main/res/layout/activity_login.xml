<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/gmail_background_light">

    <!-- Logo Card -->
    <androidx.cardview.widget.CardView
        style="@style/GmailCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <!-- Gmail Logo -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/ic_dialog_email"
                android:tint="@color/gmail_red"
                android:layout_marginBottom="16dp" />

            <!-- App Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gmail"
                android:textSize="32sp"
                android:textStyle="normal"
                android:textColor="@color/gmail_text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="התחברות לחשבון"
                android:textSize="16sp"
                android:textColor="@color/gmail_text_secondary" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Login Form Card -->
    <androidx.cardview.widget.CardView
        style="@style/GmailCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Email Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="כתובת מייל"
                app:boxStrokeColor="@color/gmail_blue"
                app:hintTextColor="@color/gmail_text_secondary"
                app:startIconDrawable="@android:drawable/ic_dialog_email"
                app:startIconTint="@color/gmail_text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/gmail_text_primary" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="סיסמה"
                app:boxStrokeColor="@color/gmail_blue"
                app:hintTextColor="@color/gmail_text_secondary"
                app:endIconMode="password_toggle"
                app:startIconDrawable="@android:drawable/ic_lock_lock"
                app:startIconTint="@color/gmail_text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/gmail_text_primary" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Login Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="התחבר"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/gmail_blue"
                app:cornerRadius="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Result Text -->
            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/gmail_text_secondary"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Register Link Card -->
    <androidx.cardview.widget.CardView
        style="@style/GmailCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_add"
                android:tint="@color/gmail_blue"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tvRegisterLink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="אין לך חשבון? הירשם כאן"
                android:textColor="@color/gmail_blue"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_menu_more"
                android:tint="@color/gmail_text_secondary" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gmail_background_light">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/gmail_background_white"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/gmail_text_primary" />

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/gmail_background_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Compose Card -->
            <androidx.cardview.widget.CardView
                style="@style/GmailCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- To Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="אל (הפרד מספר נמענים בפסיק)"
                        app:startIconDrawable="@android:drawable/ic_dialog_email"
                        app:startIconTint="@color/gmail_text_secondary"
                        app:boxStrokeColor="@color/gmail_blue"
                        app:hintTextColor="@color/gmail_text_secondary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textDirection="ltr"
                            android:textColor="@color/gmail_text_primary" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Subject Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="נושא"
                        app:boxStrokeColor="@color/gmail_blue"
                        app:hintTextColor="@color/gmail_text_secondary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSubject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences"
                            android:textColor="@color/gmail_text_primary" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gmail_divider"
                        android:layout_marginVertical="8dp" />

                    <!-- Content Header -->
                    <TextView
                        style="@style/GmailTextPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="כתיבת מייל:"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Content Field -->
                    <EditText
                        android:id="@+id/etContent"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@android:color/transparent"
                        android:gravity="top|start"
                        android:hint="כתוב את המייל כאן..."
                        android:inputType="textMultiLine|textCapSentences"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/gmail_text_primary"
                        android:textColorHint="@color/gmail_text_hint"
                        android:scrollbars="vertical" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Info Card -->
            <androidx.cardview.widget.CardView
                style="@style/GmailCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#e8f0fe">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_info"
                        android:tint="@color/gmail_blue"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        style="@style/GmailTextSecondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="טיפ: מיילים עם קישורים חשודים יועברו אוטומטית לדואר זבל"
                        android:textColor="@color/gmail_blue" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/gmail_background_white"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSend"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="שלח"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/gmail_blue"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_send"
            app:iconTint="@android:color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveDraft"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="שמור טיוטה"
            android:textColor="@color/gmail_text_secondary"
            app:strokeColor="@color/gmail_text_secondary"
            app:cornerRadius="8dp" />

    </LinearLayout>

</LinearLayout>
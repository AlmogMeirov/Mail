<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_large">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/margin_large">

        <ImageView
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:src="@drawable/label"
            android:tint="@color/button_primary"
            android:layout_marginEnd="@dimen/margin_small"
            android:contentDescription="@string/create_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_label"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"
            android:textColor="@color/text_primary_light" />

    </LinearLayout>

    <!-- Label Name Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_name"
        android:layout_marginBottom="@dimen/margin_medium"
        app:startIconDrawable="@drawable/edit"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etLabelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textDirection="anyRtl"
            android:textAlignment="viewStart"
            android:layoutDirection="rtl" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Color Selection Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="@string/choose_color"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:textColor="@color/text_primary_light" />

    <!-- Selected Color Display -->
    <TextView
        android:id="@+id/tvSelectedColor"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginBottom="@dimen/margin_small"
        android:gravity="center"
        android:text="@string/selected_color"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:background="@color/label_blue" />

    <!-- Color Grid -->
    <GridLayout
        android:id="@+id/colorGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large"
        android:columnCount="4"
        android:orientation="horizontal">

        <!-- Color Options -->
        <View
            android:id="@+id/colorBlue"
            android:layout_width="@dimen/color_picker_item_size"
            android:layout_height="@dimen/color_picker_item_size"
            android:layout_margin="4dp"
            android:background="@color/label_blue"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/colorRed"
            android:layout_width="@dimen/color_picker_item_size"
            android:layout_height="@dimen/color_picker_item_size"
            android:layout_margin="4dp"
            android:background="@color/label_red"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/colorGreen"
            android:layout_width="@dimen/color_picker_item_size"
            android:layout_height="@dimen/color_picker_item_size"
            android:layout_margin="4dp"
            android:background="@color/label_green"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/colorYellow"
            android:layout_width="@dimen/color_picker_item_size"
            android:layout_height="@dimen/color_picker_item_size"
            android:layout_margin="4dp"
            android:background="@color/label_yellow"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/colorOrange"
            android:layout_width="@dimen/color_picker_item_size"
            android:layout_height="@dimen/color_picker_item_size"
            android:layout_margin="4dp"
            android:background="@color/label_orange"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/colorPurple"
            android:layout_width="@dimen/color_picker_item_size"
            android:layout_height="@dimen/color_picker_item_size"
            android:layout_margin="4dp"
            android:background="@color/label_purple"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/colorPink"
            android:layout_width="@dimen/color_picker_item_size"
            android:layout_height="@dimen/color_picker_item_size"
            android:layout_margin="4dp"
            android:background="@color/label_pink"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/colorTeal"
            android:layout_width="@dimen/color_picker_item_size"
            android:layout_height="@dimen/color_picker_item_size"
            android:layout_margin="4dp"
            android:background="@color/label_teal"
            android:clickable="true"
            android:focusable="true" />

    </GridLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="@string/cancel"
            android:textColor="@color/text_secondary_light"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_label"
            android:backgroundTint="@color/button_primary"
            android:textColor="@color/button_text_primary" />

    </LinearLayout>

</LinearLayout>
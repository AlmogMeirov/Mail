<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <!-- Unread indicator (קו כחול משמאל) -->
    <View
        android:id="@+id/unreadIndicator"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_bright"
        android:layout_marginEnd="8dp"
        android:visibility="gone" />

    <!-- Avatar placeholder -->
    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:background="@android:drawable/sym_def_app_icon" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Sender and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvSender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="sender@example.com"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:ellipsize="end" />

            <!-- Read/Unread status icon -->
            <ImageView
                android:id="@+id/ivRead"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:src="@android:drawable/ic_menu_view"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <!-- Subject -->
        <TextView
            android:id="@+id/tvSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="נושא המייל"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:ellipsize="end" />

        <!-- Preview -->
        <TextView
            android:id="@+id/tvPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="תוכן המייל..."
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Right side indicators -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp">

        <!-- Star indicator -->
        <ImageView
            android:id="@+id/ivStar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/btn_star_big_on"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <!-- Spam indicator -->
        <View
            android:id="@+id/spamIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:drawable/presence_busy"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
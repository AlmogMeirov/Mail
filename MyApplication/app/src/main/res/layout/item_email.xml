<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/card_background"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- Sender Avatar -->
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/avatar_size_medium"
        android:layout_height="@dimen/avatar_size_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_gravity="top"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/unread_indicator">

        <TextView
            android:id="@+id/tvSenderAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="א"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center" />

    </androidx.cardview.widget.CardView>

    <!-- Email Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- First Row: Sender and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvSender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="שולח"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/text_primary_light"
                android:textStyle="normal"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:30"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_secondary_light"
                android:layout_marginStart="@dimen/margin_small" />

        </LinearLayout>

        <!-- Subject Line -->
        <TextView
            android:id="@+id/tvSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="נושא המייל"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/text_primary_light"
            android:textStyle="normal"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Preview Text -->
        <TextView
            android:id="@+id/tvPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="תצוגה מקדימה של תוכן המייל..."
            android:textSize="13sp"
            android:textColor="@color/text_secondary_light"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Labels Row -->
        <LinearLayout
            android:id="@+id/labelsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <!-- Example Label Chip -->
            <TextView
                android:id="@+id/labelChip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="חשוב"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_label_chip"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginEnd="4dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Right Side Actions -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/margin_small">

        <!-- Star Icon -->
        <ImageView
            android:id="@+id/ivStar"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:src="@drawable/ic_star_border"
            android:tint="@color/text_secondary_light"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:visibility="visible"
            android:contentDescription="@string/star" />

        <!-- Read/Unread Icon -->
        <ImageView
            android:id="@+id/ivRead"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:src="@drawable/mark_as_read"
            android:tint="@color/text_secondary_light"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:visibility="visible"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/mark_read" />

        <!-- Important Indicator -->
        <ImageView
            android:id="@+id/ivImportant"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:src="@drawable/help"
            android:tint="@color/important_yellow"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:contentDescription="@string/important" />

        <!-- Spam Indicator -->
        <View
            android:id="@+id/spamIndicator"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:background="@drawable/ic_spam"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

        <!-- Unread Indicator -->
        <View
            android:id="@+id/unreadIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/circle_blue"
            android:layout_marginTop="4dp"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>
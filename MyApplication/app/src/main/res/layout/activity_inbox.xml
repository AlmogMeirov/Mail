<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Gmail-style Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/ToolbarStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:background="@color/white"
                android:elevation="4dp"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/padding_medium"
                    android:paddingEnd="@dimen/padding_medium">

                    <!-- Hamburger Menu -->
                    <ImageView
                        android:id="@+id/ivMenu"
                        style="@style/IconButtonStyle"
                        android:src="@drawable/menu"
                        android:tint="@color/text_secondary_light"
                        android:contentDescription="@string/desc_menu" />

                    <!-- Search Bar Container -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/searchContainer"
                        style="@style/SearchBarStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginEnd="@dimen/margin_medium"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/padding_medium"
                            android:paddingEnd="@dimen/padding_medium">

                            <ImageView
                                android:layout_width="@dimen/icon_size_medium"
                                android:layout_height="@dimen/icon_size_medium"
                                android:src="@drawable/search"
                                android:tint="@color/text_secondary_light"
                                android:layout_marginEnd="@dimen/margin_small" />

                            <TextView
                                style="@style/TextStyle.Body"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/search_mail"
                                android:textColor="@color/text_secondary_light"
                                android:singleLine="true" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Profile Icon -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/profileIcon"
                        android:layout_width="@dimen/avatar_size_small"
                        android:layout_height="@dimen/avatar_size_small"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/avatar_red"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/person"
                            android:tint="@color/white"
                            android:padding="6dp"
                            android:contentDescription="@string/desc_profile" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <!-- Gmail-style Tab Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_height"
                android:orientation="horizontal"
                android:background="@color/white"
                android:elevation="2dp"
                android:gravity="center_vertical">

                <!-- Primary Tab -->
                <LinearLayout
                    android:id="@+id/tabPrimary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@drawable/inbox"
                        android:tint="@color/tab_selected_text"
                        android:layout_marginEnd="@dimen/margin_small" />

                    <TextView
                        style="@style/TextStyle.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/primary"
                        android:textColor="@color/tab_selected_text"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Social Tab -->
                <LinearLayout
                    android:id="@+id/tabSocial"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@drawable/emoji_people"
                        android:tint="@color/tab_unselected_text"
                        android:layout_marginEnd="@dimen/margin_small" />

                    <TextView
                        style="@style/TextStyle.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/social"
                        android:textColor="@color/tab_unselected_text" />

                </LinearLayout>

                <!-- Promotions Tab -->
                <LinearLayout
                    android:id="@+id/tabPromotions"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@drawable/label"
                        android:tint="@color/tab_unselected_text"
                        android:layout_marginEnd="@dimen/margin_small" />

                    <TextView
                        style="@style/TextStyle.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/promotions"
                        android:textColor="@color/tab_unselected_text" />

                </LinearLayout>

            </LinearLayout>

            <!-- Email List Content -->
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Email List -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewEmails"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:paddingBottom="80dp"
                        android:background="@color/background_light" />

                    <!-- Empty State -->
                    <LinearLayout
                        android:id="@+id/emptyState"
                        style="@style/EmptyStateStyle"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/inbox"
                            android:tint="@color/text_secondary_light"
                            android:alpha="0.6" />

                        <TextView
                            style="@style/TextStyle.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_large"
                            android:text="@string/no_emails"
                            android:textColor="@color/text_secondary_light"
                            android:gravity="center" />

                        <TextView
                            style="@style/TextStyle.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/no_emails_description"
                            android:textColor="@color/text_hint_light"
                            android:gravity="center" />

                    </LinearLayout>

                </FrameLayout>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </LinearLayout>

        <!-- Gmail-style FAB -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCompose"
            style="@style/FabStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/edit"
            app:backgroundTint="@color/white"
            app:tint="@color/gmail_red"
            app:elevation="6dp"
            app:borderWidth="0dp"
            android:contentDescription="@string/desc_compose" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        style="@style/NavigationViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>
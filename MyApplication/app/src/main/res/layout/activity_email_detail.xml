<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gmail_background_light">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/gmail_background_white"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/gmail_text_primary" />

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/gmail_background_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Card -->
            <androidx.cardview.widget.CardView
                style="@style/GmailCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Subject and Spam Indicator -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/tvSubject"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Email Subject"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/gmail_text_primary" />

                        <ImageView
                            android:id="@+id/ivSpamIndicator"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_dialog_alert"
                            android:tint="@color/gmail_red"
                            android:visibility="gone"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Sender with Avatar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/tvSenderAvatar"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/circle_background"
                            android:gravity="center"
                            android:text="A"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSender"
                                style="@style/GmailTextPrimary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="From: sender@example.com"
                                android:textStyle="bold" />

                            <!-- Recipients -->
                            <TextView
                                android:id="@+id/tvRecipients"
                                style="@style/GmailTextSecondary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="To: recipient@example.com"
                                android:layout_marginTop="2dp"
                                android:visibility="gone" />

                        </LinearLayout>

                        <!-- Timestamp -->
                        <TextView
                            android:id="@+id/tvTimestamp"
                            style="@style/GmailTextHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01/01/2024 10:30"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Labels Display -->
                    <LinearLayout
                        android:id="@+id/layoutLabels"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:visibility="gone">

                        <TextView
                            style="@style/GmailTextHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Labels: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvLabels"
                            style="@style/GmailTextHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/label_background"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="3dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Content Card -->
            <androidx.cardview.widget.CardView
                style="@style/GmailCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/GmailTextPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email Content:"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvContent"
                        style="@style/GmailTextPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email content will appear here..."
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp"
                        android:textIsSelectable="true" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Trash Notice Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTrashNotice"
                style="@style/GmailCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="#fff3e0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_info"
                        android:tint="@color/gmail_orange"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvTrashNotice"
                        style="@style/GmailTextPrimary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="This email is in trash - limited actions available"
                        android:textColor="@color/gmail_orange" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Action Buttons at Bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/gmail_background_white"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReply"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Reply"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/gmail_blue"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_revert"
            app:iconTint="@android:color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReportSpam"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Report Spam"
            android:textColor="@color/gmail_red"
            app:strokeColor="@color/gmail_red"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnManageLabels"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Manage Labels"
            android:textColor="@color/gmail_blue"
            app:strokeColor="@color/gmail_blue"
            app:cornerRadius="8dp" />

    </LinearLayout>

</LinearLayout>
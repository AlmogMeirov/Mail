<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_blue_dark"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@drawable/arrow_back">

        <!-- Action buttons in toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingEnd="16dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Delete -->
            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/delete"
                android:tint="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:contentDescription="מחק" />

            <!-- More options -->
            <ImageView
                android:id="@+id/ivMoreOptions"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/more_vert"
                android:tint="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:contentDescription="אפשרויות נוספות" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- Quick Actions Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#f1f3f4"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Reply -->
        <LinearLayout
            android:id="@+id/btnReply"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_back"
                android:tint="@android:color/white"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="השב"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Label -->
        <ImageView
            android:id="@+id/ivLabel"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/label"
            android:tint="#5f6368"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:contentDescription="הוסף תווית" />

        <!-- Check/Mark as read -->
        <ImageView
            android:id="@+id/ivMarkRead"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/check"
            android:tint="#5f6368"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:layout_marginStart="8dp"
            android:contentDescription="סמן כנקרא" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Subject and Spam Indicator -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/tvSubject"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="נושא המייל"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:id="@+id/ivSpamIndicator"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/help"
                            android:tint="@android:color/holo_red_light"
                            android:visibility="gone" />

                    </LinearLayout>

                    <!-- Sender with icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/person"
                            android:tint="@android:color/darker_gray"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvSender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="מאת: sender@example.com"
                            android:textSize="14sp"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <!-- Recipients with icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/emoji_people"
                            android:tint="@android:color/darker_gray"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvRecipients"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="אל: recipient@example.com"
                            android:textSize="14sp"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <!-- Timestamp -->
                    <TextView
                        android:id="@+id/tvTimestamp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="01/01/2024 10:30"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:drawableStart="@drawable/send"
                        android:drawableTint="@android:color/darker_gray"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Content Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/inbox"
                            android:tint="@android:color/darker_gray"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="תוכן המייל:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="תוכן המייל יופיע כאן..."
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:lineSpacingExtra="4dp"
                        android:textIsSelectable="true" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
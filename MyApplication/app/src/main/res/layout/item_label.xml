<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        android:gravity="center_vertical">

        <!-- Color Indicator -->
        <View
            android:id="@+id/colorIndicator"
            android:layout_width="4dp"
            android:layout_height="32dp"
            android:layout_marginEnd="@dimen/margin_small"
            android:background="@color/label_blue" />

        <!-- Label Icon -->
        <ImageView
            android:id="@+id/ivLabelIcon"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_marginEnd="@dimen/margin_small"
            android:src="@drawable/label"
            android:tint="@color/text_secondary_light"
            android:contentDescription="@string/labels" />

        <!-- Label Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLabelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="שם התווית"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:textColor="@color/text_primary_light" />

            <TextView
                android:id="@+id/tvLabelType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/personal_label"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_secondary_light" />

        </LinearLayout>

        <!-- Options Button -->
        <ImageView
            android:id="@+id/ivOptions"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:src="@drawable/more_vert"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/text_secondary_light"
            android:contentDescription="@string/more_options" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
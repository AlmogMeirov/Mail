<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/gmail_red</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/gmail_blue</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
    </style>

    <!-- No Action Bar Theme -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/gmail_red</item>
        <item name="android:statusBarColor">@color/gmail_red</item>
    </style>

    <!-- Text Styles -->
    <style name="TextStyle">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Headline" parent="TextStyle">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Display" parent="TextStyle">
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Body" parent="TextStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextStyle.Caption" parent="TextStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="ButtonStyle.Primary" parent="ButtonStyle">
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/button_text_primary</item>
    </style>

    <style name="ButtonStyle.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/button_primary</item>
        <item name="android:textColor">@color/button_text_secondary</item>
    </style>

    <!-- Input Field Styles -->
    <style name="InputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginBottom">@dimen/input_field_margin</item>
        <item name="boxCornerRadiusTopStart">@dimen/card_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/card_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/card_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/card_corner_radius</item>
    </style>

    <!-- Card Styles -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Email Item Styles -->
    <style name="EmailItemStyle">
        <item name="android:layout_height">@dimen/email_item_height</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <!-- Toolbar Styles -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/toolbar_background</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>

    <!-- FAB Style -->
    <style name="FabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="backgroundTint">@color/gmail_red</item>
        <item name="tint">@color/white</item>
    </style>

    <!-- Navigation View Style -->
    <style name="NavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextColor">@color/nav_item_text</item>
        <item name="itemIconTint">@color/nav_item_text</item>
    </style>

    <!-- Tab Layout Style -->
    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/tab_indicator</item>
        <item name="tabSelectedTextColor">@color/tab_selected_text</item>
        <item name="tabTextColor">@color/tab_unselected_text</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
    </style>

    <!-- Search Bar Style -->
    <style name="SearchBarStyle" parent="CardStyle">
        <item name="cardCornerRadius">@dimen/search_bar_corner_radius</item>
        <item name="cardElevation">1dp</item>
        <item name="cardBackgroundColor">@color/search_bar_background</item>
        <item name="android:layout_height">@dimen/search_bar_height</item>
    </style>

    <!-- Avatar Styles -->
    <style name="AvatarStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AvatarStyle.Small" parent="AvatarStyle">
        <item name="android:layout_width">@dimen/avatar_size_small</item>
        <item name="android:layout_height">@dimen/avatar_size_small</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AvatarStyle.Medium" parent="AvatarStyle">
        <item name="android:layout_width">@dimen/avatar_size_medium</item>
        <item name="android:layout_height">@dimen/avatar_size_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AvatarStyle.Large" parent="AvatarStyle">
        <item name="android:layout_width">@dimen/avatar_size_large</item>
        <item name="android:layout_height">@dimen/avatar_size_large</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Icon Button Style -->
    <style name="IconButtonStyle">
        <item name="android:layout_width">@dimen/icon_size_large</item>
        <item name="android:layout_height">@dimen/icon_size_large</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Label Color Item Style -->
    <style name="LabelColorItemStyle">
        <item name="android:layout_width">@dimen/color_picker_item_size</item>
        <item name="android:layout_height">@dimen/color_picker_item_size</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Empty State Style -->
    <style name="EmptyStateStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <!-- Progress Bar Style -->
    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/gmail_blue</item>
    </style>

    <!-- Divider Style -->
    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

</resources>